{% block stylesheets %}
	<style>
		.row {
			margin-bottom: 20px;
		}
	</style>
{% endblock %}
{{ form_start(form) }}
<div class="row">
	<div class="col-lg-12">
		{{ form_errors(form) }}
	</div>
</div>
<div class="row">
	<div class="col-lg-2">
		{{ form_widget(form.title) }}
	</div>
	<div class="col-lg-4">
		{{ form_widget(form.firstName) }}
	</div>
	<div class="col-lg-4">
		{{ form_widget(form.lastName) }}
	</div>
</div>
<div class="row">
	<div class="col-lg-6">
		{{ form_widget(form.email) }}
	</div>
	<div class="col-lg-4">
		{{ form_widget(form.phoneNumber) }}
	</div>
</div>
<div class="row">
	<div class="col-lg-6">
		{{ form_widget(form.addressLine1) }}
	</div>
	<div class="col-lg-4">
		{{ form_widget(form.postCode) }}
	</div>
</div>
<div class="row">
	<div class="col-lg-6">
		{{ form_widget(form.addressLine2) }}
	</div>
	<div class="col-lg-4">
		{{ form_widget(form.city) }}
	</div>
	<div class="col-lg-2">
		<button class="btn btn-primary btn-lg">{{ button_label|default('Enregistrer') }}</button>
	</div>
</div>
{{ form_end(form) }}
